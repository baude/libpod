[Unit]
Description=Podman Remote API Service
Requires=io.containers.podman.socket
After=io.containers.podman.socket
Documentation=man:podman-varlink(1)

[Service]
Type=simple
ExecStart=/usr/bin/podman varlink unix:/run/podman/io.containers.podman

[Install]
WantedBy=multi-user.target
Also=io.containers.podman.socket
